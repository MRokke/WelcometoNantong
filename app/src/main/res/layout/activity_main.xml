<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.welcometonantong.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:clickable="false"
            android:forceHasOverlappingRendering="false"
            android:scaleType="centerCrop"
            android:src="@drawable/ntview" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Hello! This is Nantong!"
            android:textStyle="bold|italic"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Nice to Meet You!"
            android:textStyle="bold|italic"
            android:textSize="30sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2">

        <ImageButton
            android:id="@+id/imageButtonIntro"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ntintro"
            android:onClick="introshow"/>

        <ImageButton
            android:id="@+id/imageButtonFood"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/imageButtonIntro"
            android:scaleType="fitXY"
            android:src="@drawable/ntfood"
            android:onClick="foodshow" />

        <ImageButton
            android:id="@+id/imageButtonRiver"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/imageButtonIntro"
            android:src="@drawable/ntriver"
            android:scaleType="fitXY"
            android:onClick="rivershow" />

        <ImageButton
            android:id="@+id/imageButtonHill"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/imageButtonFood"
            android:src="@drawable/nthill"
            android:scaleType="fitXY"
            android:onClick="hillshow" />
    </RelativeLayout>
</LinearLayout>



